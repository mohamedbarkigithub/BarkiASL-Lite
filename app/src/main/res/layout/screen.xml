<?xml version="1.0" encoding="utf-8" ?>
<net.colindodd.gradientlayout.GradientRelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:gl="http://schemas.android.com/apk/res-auto"
	gl:start_color="@color/primary"
	gl:end_color="@color/textPrimary"
	gl:orientation="TL_BR"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:gravity="center"
		android:background="@drawable/button_empty"
		android:layout_marginTop="20dip"
		android:layout_marginRight="20dip"
		android:layout_marginLeft="20dip"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="70.0dp">

		<ImageButton
			android:id="@+id/rign_button"
			android:layout_weight="1.0"
			android:layout_width="0.0dip"
			android:layout_height="match_parent"
			android:background="@null"
			android:src="@drawable/ic_bell_ring"
			android:contentDescription="@string/notification"
			app:tint="@color/colorText"
			tools:ignore="SpeakableTextPresentCheck" />

		<ImageButton
			android:id="@+id/song_button"
			android:layout_weight="1.0"
			android:layout_width="0.0dip"
			android:layout_height="match_parent"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:background="@null"
			android:src="@drawable/group_song"
			android:contentDescription="@string/song"
			app:tint="@color/colorText"
			tools:ignore="SpeakableTextPresentCheck" />

		<ImageButton
			android:id="@+id/dark_button"
			android:layout_weight="1.0"
			android:layout_width="0.0dip"
			android:layout_height="match_parent"
			android:background="@null"
			android:src="@drawable/ic_dark"
			android:contentDescription="@string/dark_mode"
			app:tint="@color/colorText"
			tools:ignore="SpeakableTextPresentCheck" />

		<ImageButton
			android:id="@+id/screenButton4"
			android:layout_weight="1.0"
			android:layout_width="0.0dip"
			android:layout_height="match_parent"
			android:background="@null"
			android:src="@drawable/group_info"
			android:contentDescription="@string/info"
			app:tint="@color/colorText"
			tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
	</LinearLayout>
	<Button
		android:id="@+id/screenButton2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10.0dip"
		android:layout_centerInParent="true"
		android:background="@drawable/button_screen"
		android:minHeight="48dp"
		android:text="@string/learn"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="@color/colorText"
		tools:ignore="TextContrastCheck" />

	<Button
		android:layout_below="@id/screenButton2"
		android:id="@+id/screenButton1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:layout_marginTop="10.0dip"
		android:layout_marginBottom="10.0dip"
		android:background="@drawable/button_screen"
		android:minHeight="48dp"
		android:text="@string/start_game"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="@color/colorText"
		tools:ignore="TextContrastCheck" />

	<Button
		android:layout_below="@id/screenButton1"
		android:id="@+id/screenButton3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:layout_marginTop="10.0dip"
		android:background="@drawable/button_screen"
		android:minHeight="48dp"
		android:text="@string/start_update"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="@color/colorText"
		tools:ignore="TextContrastCheck" />
</net.colindodd.gradientlayout.GradientRelativeLayout>
