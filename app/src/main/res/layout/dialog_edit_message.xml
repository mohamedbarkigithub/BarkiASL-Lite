<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/dialog_lny_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/dialog_info"
            android:padding="10dip"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="VisualLintBounds" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|top"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/color_cursor_white"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                tools:ignore="UselessParent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/maindEditText2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/transparent"
                        android:drawableRight="@drawable/ic_past"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:padding="3dp"
                        android:imeOptions="actionDone"
                        android:scrollHorizontally="true"
                        android:drawableTint="@color/White"
                        android:textColor="@color/White"
                        android:textIsSelectable="false"
                        android:textSize="19.0sp"
                        android:typeface="monospace"
                        android:inputType="textMultiLine"
                        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TextContrastCheck,TextFields,TouchTargetSizeCheck,UnusedAttribute,VisualLintTextFieldSize" />

                    <Button
                        android:id="@+id/maindButtonPast"
                        android:layout_width="50dip"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:visibility="visible"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="VisualLintBounds">

            <ImageButton
                android:id="@+id/dialog_ok"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="5.0dip"
                android:layout_weight="0.50"
                android:background="@drawable/button_yes"
                android:src="@drawable/popup_edit_save"
                app:tint="@color/LimeGreen"
                tools:ignore="ContentDescription,ImageContrastCheck,RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="0.50"
                android:background="@drawable/button_no"
                android:src="@drawable/ic_close"
                tools:ignore="ContentDescription,RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>