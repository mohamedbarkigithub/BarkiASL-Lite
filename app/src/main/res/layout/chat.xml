<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lny_chat"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_chat"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/lny_toolbar"
        android:gravity="center_vertical"
        android:background="@drawable/layout_button_user"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_toolbar"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_admin"
            android:contentDescription="@string/img_message_left"/>
        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvName_toolbar"
                android:padding="3dp"
                android:typeface="monospace"
                android:textStyle="bold"
                android:textColor="@color/textPrimaryInverse"
                android:textSize="19sp"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="VisualLintBounds" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTime_toolbarR"
                    android:visibility="gone"
                    android:padding="2dp"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimaryInverse"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    tools:ignore="VisualLintBounds" />
                <TextView
                    android:id="@+id/lastseen_toolbar"
                    android:padding="2dp"
                    android:typeface="monospace"
                    android:text="@string/last_seen"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimaryInverse"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="VisualLintBounds" />
                <TextView
                    android:id="@+id/tvTime_toolbarL"
                    android:visibility="gone"
                    android:padding="2dp"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimaryInverse"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    tools:ignore="VisualLintBounds" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv_chats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:divider = "@android:color/transparent"
            android:paddingBottom="20dp"
            android:nestedScrollingEnabled="true"
            android:dividerHeight = "2dp"
            android:contentDescription="@string/recycerview_message"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/comment"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_user"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:hint="@string/your_support_view"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:textColor="@color/textPrimaryInverse"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/color_cursor"
            tools:ignore="Autofill,VisualLintTextFieldSize" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:contentDescription="@string/send"
            android:src="@drawable/ic_send"
            app:backgroundTint="@color/latex_keyword"
            app:tint="@color/textPrimaryInverse"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</LinearLayout>