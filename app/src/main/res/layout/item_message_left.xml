<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnyLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_message"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_gravity="top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/roundicon"
        android:contentDescription="@string/img_message_left"/>
    <com.google.android.material.card.MaterialCardView
        style="@style/CustomCardViewStyleLeft"
        android:contentDescription="@string/message_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="90dp"
        android:padding="10dp"
        app:strokeColor="@color/textPrimaryInverse"
        app:strokeWidth="1.5dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/holo_orange_dark">
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/like_black"
            android:textSize="19sp"
            android:textIsSelectable="false"
            android:autoLink="web"/>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>